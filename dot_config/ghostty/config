# vim: ft=config

# ghostty updates
auto-update = download
auto-update-channel = stable

# shell
command = /opt/homebrew/bin/fish

# theme
theme = "dark:catppuccin-mocha,light:catppuccin-latte"
# theme = "dark:catppuccin-mocha,light:Builtin Solarized Light"
window-save-state = always
# maximize = true
# fullscreen = true

# font
font-family = JetBrainsMono Nerd Font

# laptop screen: 16
font-size = 18

# font-feature = -liga
# font-thicken = true
window-padding-x = 6
window-padding-y = 6
unfocused-split-opacity = 1

# cursor
cursor-color = #f5e0dc
cursor-style-blink = false
cursor-style = block
shell-integration-features = no-cursor

# behaviour
copy-on-select = false

# quake style dropdown terminal
keybind = global:ctrl+shift+slash=toggle_quick_terminal
quick-terminal-animation-duration = 0

# panes
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+equal=equalize_splits

# for glove80
keybind = command+option+h=goto_split:left
keybind = command+option+j=goto_split:down
keybind = command+option+k=goto_split:up
keybind = command+option+l=goto_split:right

# resizing splits
keybind = super+ctrl+down=resize_split:down,70
keybind = super+ctrl+left=resize_split:left,70
keybind = super+ctrl+up=resize_split:up,70
keybind = super+ctrl+right=resize_split:right,70

